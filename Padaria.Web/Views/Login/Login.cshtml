@using System.Web.Mvc;
@using System.Web.WebPages;
@using System.Web.Mvc.Html;
@model Padaria.Repository.Entities.Login

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm(actionName: "Login", controllerName: "Login", method: FormMethod.Post, htmlAttributes: new { @class = "omb_loginForm" }, routeValues: new { ReturnUrl = ViewBag.ReturnUrl }))
{


  

   <div class="container">


        <div class="omb_login">
            <hr />
            <hr />
            <div style="text-align:center">
                @Html.ActionLink(linkText: "Sign up", actionName: "Create", controllerName: "User", routeValues: null, htmlAttributes: new { style = "text-align:center" })
            </div>

            <hr />
            <div class="row omb_row-sm-offset-3 omb_socialButtons">
                <div class="col-xs-4 col-sm-2">
                    <a href="#" class="btn btn-lg btn-block omb_btn-facebook">
                        <i class="fa fa-facebook visible-xs"></i>
                        <span class="hidden-xs">Facebook</span>
                    </a>
                </div>
                <div class="col-xs-4 col-sm-2">
                    <a href="#" class="btn btn-lg btn-block omb_btn-twitter">
                        <i class="fa fa-twitter visible-xs"></i>
                        <span class="hidden-xs">Twitter</span>
                    </a>
                </div>
                <div class="col-xs-4 col-sm-2">
                    <a href="#" class="btn btn-lg btn-block omb_btn-google">
                        <i class="fa fa-google-plus visible-xs"></i>
                        <span class="hidden-xs">Google+</span>
                    </a>
                </div>
            </div>

           <div class="row omb_row-sm-offset-3 omb_loginOr">
                <div class="col-xs-12 col-sm-6">
                    <hr class="omb_hrOr">
                    <span class="omb_spanOr">or</span>
                </div>
            </div>
            
          <div class="row omb_row-sm-offset-3">
              <div class="col-xs-12 col-sm-6">
                  <div class="input-group">
                      <span class="input-group-addon"><i class="fa fa-user"></i></span>
                      @Html.TextBoxFor(c => c.UserName, htmlAttributes: new { @class = "form-control" })

                  </div>
                  <span class="help-block"></span>

                  <div class="input-group">
                      <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                      @Html.TextBoxFor(c => c.PassWord, htmlAttributes: new { @class = "form-control",@type="password" })
                      @Html.ValidationMessage("erroLogin", htmlAttributes: new { @class = "label label-danger" })
                  </div>
                  <hr />
                  <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>

              </div>
            </div>



       </div>



    </div>
}

